<p id="notice"><%= notice %></p>

<h1>Listing Assignments</h1>

<table>
  <thead>
    <tr>
      <th>Event</th>
      <th>Location</th>
      <th>User</th>
      <th>Start</th>
      <th>End</th>
      <th>Attended</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @assignments.each do |assignment| %>
      <tr>
        <td><%= assignment.event_id %></td>
        <td><%= assignment.location_id %></td>
        <td><%= assignment.user_id %></td>
        <td><%= assignment.start %></td>
        <td><%= assignment.end %></td>
        <td><%= assignment.attended %></td>
        <td><%= link_to 'Show', assignment %></td>
        <td><%= link_to 'Edit', edit_assignment_path(assignment) %></td>
        <td><%= link_to 'Destroy', assignment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

